{
  "compilerOptions": {
    // "rootDir": "./src",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2016",
    "lib": ["es2015", "dom"],
    "types": ["node"],
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src", "prisma/**/*", "generated/**/*"],
  "exclude": ["node_modules", "dist"]
}