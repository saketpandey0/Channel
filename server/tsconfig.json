{
  "compilerOptions": {
    "target": "es2016",
    "module": "node16",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express", "express-session", "passport"]
  },
  "include": ["./src/**/*.ts", "types"]
}
